@using Autopark.DAL.Entities;
@model IEnumerable<VehicleType>;
@{
	ViewData["Title"] = "Vehicle Types";
}

<h2>@ViewData["Title"]</h2>
<br>
@if (Model.Any())
{

    <table class="table table-hover">

        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Coefficient of tax</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VehicleTypeId</td>
                <td>@item.TypeName</td>
                <td>@item.TaxCoefficient</td>
                <td>
                    <form method="post" asp-controller="VehicleType" asp-action="Delete" asp-route-id="@item.VehicleTypeId">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-controller="VehicleType" asp-action="Edit" asp-route-id="@item.VehicleTypeId">
                        <button class="btn btn-warning" type="submit">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </table>
        <button type="submit" class="btn-success">
            <a asp-action="Create" asp-controller="VehicleType" style="text-decoration: none; color:white">Create vehicle type</a>
        </button>
}
else
{
    <h3 class="">There are no any vehicle types in your data base. Click <a asp-action="Create" asp-controller="VehicleType">here</a> to create first</h3>
}

