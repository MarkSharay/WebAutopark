@using Autopark.DAL.Entities;
@model Component;
@{
	ViewData["Title"] = "Component editor";
}

<h1>@ViewData["Title"]</h1>
<br />
<button class="btn btn-primary btn-outline-dark">
	<a style="text-decoration:none; color: white;" asp-controller="Component" asp-action="Index">Back</a>
</button>
<form asp-controller="VehicleType" asp-action="EditConfirm">
	<div class="form-group">
		<label class="col-1">ID</label>
		<input class="col-2" disabled value="@Model.ComponentId" />
	</div>
	
	<div class="form-group">
		<label class="col-1">Name</label>
		<input class="col-2" asp-for="Name" />
	</div>
	<input hidden asp-for="ComponentId" />
	<button class="btn btn-success btn-outline-dark" type="submit">Submit</button>
</form>