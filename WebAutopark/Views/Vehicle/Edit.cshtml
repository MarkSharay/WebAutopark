@using Autopark.DAL.Entities;
@model Vehicle;

@{
    ViewData["Title"] = "Vehicle editor";
}
<h1>@ViewData["Title"]</h1>
<br />
<form asp-action="ConfirmEdit" asp-controller="Vehicle">
    <div>
        <input type="hidden" asp-for="VehicleId" />
        <div class="form-group">
            <label>Model Name:</label>
            <input type="text" asp-for="Model" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label>Registration Number:</label>
            <input asp-for="RegistrationNumber" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Weight">Weight:</label>
            <input asp-for="Weight" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label>Manufacture Year:</label>
            <input asp-for="Year" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label >Mileage:</label>
            <input asp-for="MileAge" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label >Color:</label>
            <select asp-for="Color" class="form-control  form-control-sm" asp-items="Html.GetEnumSelectList(typeof(Colors))"> </select>
        </div>
       
        <div class="form-group">
            <label >Volume:</label>
            <input asp-for="Volume" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label>Fuel consumption:</label>
            <input asp-for="FuelConsumption" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label>Type Id:</label>
            <select class="form-control" asp-for="VehicleTypeId" asp-items="@ViewBag.types"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success btn-outline-dark" />
        </div>
    </div>
</form>

<div>
    <button class="btn btn-primary btn-outline-dark">
		<a style="text-decoration: none; color: white;" asp-controller="Vehicle" asp-action="Index">Back</a>
    </button>
</div>
